<!-- declares the libraries needed by the Whirled runtime -->
<project name="whirled-dependencies" basedir=".">
  <fileset dir="${libs.dir}" id="whirled.libs">
    <!-- Java dependencies -->
    <include name="ant.jar"/>
    <include name="asc.jar"/>
    <include name="flexTasks.jar"/>
    <include name="commons-digester.jar"/>
    <include name="commons-collections.jar"/>
    <include name="commons-io.jar"/>
    <include name="commons-lang.jar"/>
    <include name="google-collect.jar"/>
    <include name="jetty-util.jar"/>
    <include name="jetty.jar"/>
    <include name="mina-core.jar"/>
    <include name="slf4j-api.jar"/>
    <include name="slf4j-jdk14.jar"/>
    <include name="servlet-*.jar"/>
    <include name="velocity-1.5-dev.jar"/>
    <!-- these might be named lib-SNAPSHOT-0.0.jar or lib.jar -->
    <include name="samskivert*.jar"/>
    <include name="narya-base*.jar"/>
    <include name="narya-distrib*.jar"/>
    <include name="nenya-media*.jar"/>
    <include name="nenya-rsrc*.jar"/>
    <include name="vilya-parlor*.jar"/>
    <!-- ActionScript dependencies -->
    <include name="naryalib.swc"/>
    <include name="nenyalib.swc"/>
    <include name="vilyalib.swc"/>
    <!-- ABC dependencies -->
    <include name="narya-abc*.abc"/>
    <include name="vilya-abc*.abc"/>
    <include name="tamarin-builtin*.abc"/>
    <include name="thane*.abc"/>
    <include name="http*.abc"/>
  </fileset>
</project>
